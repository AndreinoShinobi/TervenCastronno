<h2>I Nostri Eventi</h2>

<div class="panel-group">

  <% @all_events.each do |event| %>
      <% panel_id = 'event'+ event.id.to_s %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#<%= panel_id%> "><%=event.name%></a>
          </h4>
        </div>
        <div id="<%= panel_id %>" class="panel-collapse collapse">
          <div class="panel-body">image</div>
          <div class="panel-footer">description</div>
        </div>
      </div>
  <% end %>
</div>
