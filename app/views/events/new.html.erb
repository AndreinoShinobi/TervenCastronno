<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Nuovo Evento</h2>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@new_event) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :date %>
        <%= f.date_select :date %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.submit 'Registra Evento', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>